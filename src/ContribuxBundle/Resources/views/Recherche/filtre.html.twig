<script>
    $(document).ready(function () {
        var url = "projets_ajax/";
        $("#target-content").load("{{ path('projets_ajax',{'page': 1}) }}");

        $(document).on("click", ".pagination li", function (e) {
            e.preventDefault();
            $("#target-content").html('loading...');
            //$(".pagination li").removeClass('active');
            //$(this).addClass('active');
            $("#target-content").load(url + $(this).attr('id'));
        });

        $(document).on("click", ".btn-all", function (e) {
            e.preventDefault();
            $(".pagination li").removeClass('active');
            $("#target-content").html('loading...');
            url = "projets_ajax/";
            $("#target-content").load(url + "1");
            $(this).addClass('active');
        });

        $(document).on("click", ".btn-categorie", function (e) {
            e.preventDefault();
            $(".pagination li").removeClass('active');
            $("#target-content").html('loading...');
            url = "recherche_categorie_ajax/" + $(this).attr('id') + "/";
            $("#target-content").load(url + "1");
            $(this).addClass('active');
        });

        $(document).on("click", ".btn-aide", function (e) {
            e.preventDefault();
            $(".pagination li").removeClass('active');
            $("#target-content").html('loading...');
            //$(".pagination li").removeClass('active');
            //$(this).addClass('active');
            url = "recherche_aide_ajax/" + $(this).attr('id') + "/";
            $("#target-content").load(url + "1");
            $(this).addClass('active');
        });
    });
</script>